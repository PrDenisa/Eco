{% extends 'base.html.twig' %}

{% block body %}
    <h1>Payments list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Explanation</th>
                <th>Amount</th>
                <th>Datetime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td><a href="{{ path('payments_show', { 'id': payment.id }) }}">{{ payment.id }}</a></td>
                <td>{{ payment.number }}</td>
                <td>{{ payment.explanation }}</td>
                <td>{{ payment.amount }}</td>
                <td>{% if payment.datetime %}{{ payment.datetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('payments_show', { 'id': payment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('payments_edit', { 'id': payment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('payments_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
