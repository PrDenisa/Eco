{% extends 'base.html.twig' %}

{% block body %}
    <h1>Incomes</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ income.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ income.number }}</td>
            </tr>
            <tr>
                <th>Explanation</th>
                <td>{{ income.explanation }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ income.amount }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{% if income.datetime %}{{ income.datetime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('incomes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('incomes_edit', { 'id': income.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
