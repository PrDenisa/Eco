{% extends 'base.html.twig' %}

{% block title %}Product nr. {{ product.id }}{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Stockavailable</th>
                <td>{{ product.stockAvailable }}</td>
            </tr>
            <tr>
                <th>Totalstock</th>
                <td>{{ product.totalStock }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Vat</th>
                <td>{{ product.vat }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if product.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('products_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('products_edit', { 'id': product.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
